{
  "name": "anytext",
  "author": "Georg Hinkel",
  "bugs": {
    "url": "https://github.com/NMFCode/NMF/issues"
  },
  "categories": [],
  "description": "AnyText LSP server",
  "homepage": "https://github.com/NMFCode/NMF",
  "keywords": [
    "lsp"
  ],
  "license": "MIT",
  "publisher": "GeorgHinkel",
  "repository": {
    "type": "git",
    "url": "https://github.com/NMFCode/NMF.git"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.67.0",
    "node": ">=16.0.0"
  },
  "activationEvents": [
    "onLanguage:anytext"
  ],
  "main": "./out/extension",
  "contributes": {
    "languages": [
      {
        "id": "anytext",
        "extensions": [
          ".anytext"
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "anytext.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "anytext.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm install",
    "compile": "tsc -p ./"
  },
  "dependencies": {
    "abort-controller": "3.0.0",
    "anytext": "file:",
    "jsonc-parser": "2.3.0",
    "vscode-languageclient": "~9.0.1",
    "vscode-languageserver": "~9.0.1"
  },
  "devDependencies": {
    "@types/node": "~16.18.41",
    "@types/vscode": "~1.67.0",
    "@typescript-eslint/eslint-plugin": "~6.4.1",
    "@typescript-eslint/parser": "~6.4.1",
    "@vscode/vsce": "^2.19.0",
    "concurrently": "~8.2.1",
    "esbuild": "~0.19.2",
    "eslint": "~8.47.0",
    "typescript": "~5.1.6"
  }
}
