        <None Remove="PortV3\TypeA.nmf" />
        <None Remove="PortV3\TypeB.nmf" />
    </ItemGroup>

    <ItemGroup>
        <EmbeddedResource Include="A2B\TypeA.nmf" />
        <EmbeddedResource Include="A2B\TypeB.nmf" />
