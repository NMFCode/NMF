    <PropertyGroup>
        <OutputPath>..\..\Build\Tests\</OutputPath>
    </PropertyGroup>

    <PropertyGroup>
        <LangVersion>latest</LangVersion>
    </PropertyGroup>

    <ItemGroup>
        <None Remove="A2B\TypeA.nmf" />
